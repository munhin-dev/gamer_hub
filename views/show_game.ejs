<div class="container">
  <div
    class="row flex-column flex-md-row align-items-center align-items-md-start"
  >
    <div class="col-10 col-md-5 col-lg-4 col-xl-3">
      <div class="card mt-5 shadow">
        <img
          class="card-img-top"
          src="<%= game.image_url  %>"
          alt="Card image cap"
        />
        <div class="card-body">
          <div class="card-details">
            <h6>
              Name: <span class="text-muted"> <%= game.game_name %></span>
            </h6>
            <h6>
              Developer:<span class="text-muted"> <%= game.developer %></span>
            </h6>
            <h6>
              Publisher:
              <span class="text-muted"> <%= game.game_publisher %></span>
            </h6>
            <h6>
              Released:
              <span class="text-muted">
                <%= game.year_releases.toString().slice(4, 15) %></span
              >
            </h6>
            <h6>Genre: <span class="text-muted"> <%= game.genre %> </span></h6>
          </div>
          <p><%= game.descriptions %></p>
        </div>
      </div>
    </div>
    <div class="col-10 col-md-6 col-lg-5 col-xl-4 mt-5">
      <div>
        <h4>Others who play this game</h3>
        <div class="other-player d-flex">
          <% players.forEach(player => { %>
          <p>
            <a
              class="btn btn-outline-primary mx-1"
              href="/user/<%= player.username %>"
              ><%= player.username %>
            </a>
          </p>
          <% }) %>
        </div>
      </div>
      <div>
        <h4>Posts</h4>
        <% posts.forEach(post => { %>
        <p>
          <small
            >By <strong><%= post.username %></strong>
            <em>at <%= post.created_at.toString().slice(0,34) %></em>
          </small>
        </p>
        <div class="col position-relative">
          <% if (activeUser===post.user_id) { %>
          <div class="delete-btn position-absolute top-0 end-0">
            <form action="/posts/<%= post.id %>/<%= game.id  %>" method="post">
              <input type="hidden" name="_method" value="delete" />
              <button class="delete-comment-btn">
                <img src="/img/delete-btn.png" alt="" width="10" />
              </button>
            </form>
          </div>
          <% } %>
          <div>
            <p><%= post.content %></p>
          </div>
        </div>
        <% }) %>

        <form action="/posts/<%= game.id  %>" method="post">
          <textarea
            class="form-control"
            name="content"
            rows="2"
            required
          ></textarea>
          <br />
          <button class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
