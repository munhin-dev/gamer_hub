<main class="container">
  <div class="col mt-3">
    <h4>Welcome to <%= user.username %>'s Profile</h4>
  </div>
      <% if (!disableRequest) { %>
    <form action="/reqeust/<%= user.id %>/<%= user.username %>" method="post">
      <button class="btn btn-primary">Send Friend Request</button>
    </form>
    <% } %>
  <div class="row flex-column-reverse flex-lg-row">
    <div class="col col-lg-4 col-xl-3 d-flex flex-column">
      <div class="friends list-group col-10 my-2">
        <h5>Friends</h5>
        <% if (friends.length === 0) { %>
        <h6 class="text-muted">This user has no friends =(</h6>
        <% } %> <% friends.forEach(friend => { %>
        <a
          class="list-group-item list-group-item-action"
          href="/user/<%= friend.username %>"
          ><%= friend.username %>
        </a>
        <% }) %>
      </div>
    </div>

    <div class="col">
      <h5 class="my-2">Currently Playing</h5>
      <div class="row row-cols-auto mx-auto">
        <% if (allNotFinished) { %>
        <div
          class="col-10 col-xxl-8 mx-auto mx-xxl-0 alert alert-info"
          role="alert"
        >
          There are no games here, try adding some games using the add games
          button
        </div>
        <% } %> <% games.forEach(game => { %> <% if (game.finished) { %>
        <div class="col-3 col-xl-2 p-0 m-1 position-relative">
          <a href="/games/<%= game.id %>">
            <img class="img-fluid" src="<%= game.image_url %>" alt="" />
          </a>
        </div>
        <% } %> <% }) %>
      </div>

      <h5 class="my-3">Finished</h5>
      <div class="row row-cols-auto mx-auto">
        <% if (allFinished) { %>
        <div
          class="col-10 col-xxl-8 mx-auto mx-xxl-0 alert alert-info"
          role="alert"
        >
          There are no games here, try adding some games using the add games
          button
        </div>
        <% } %> <% games.forEach(game => { %> <% if (!game.finished) { %>
        <div class="col-3 col-xl-2 p-0 m-1 position-relative">
          <a href="/games/<%= game.id %>">
            <img class="img-fluid" src="<%= game.image_url %>" alt="" />
          </a>
        </div>
        <% } %> <% }) %>
      </div>
    </div>
</main>
